<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dip"
    android:layout_marginRight="16dip"
    android:background="@drawable/shape_gray_border_rectangle"
    >

    <TextView
        android:id="@+id/common_alert_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:layout_marginLeft="24dip"
        android:gravity="center_vertical"
        android:text="@string/tips"
        android:textColor="@android:color/white"
        android:textSize="16sp" 
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/common_alert_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3dip"
        android:paddingBottom="14dip"
        android:paddingTop="14dip"
        android:textColor="@android:color/white"
        android:textSize="14sp" 
        android:layout_below="@id/common_alert_dialog_title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dip"
        />


   <Button
        android:id="@+id/common_alert_dialog_confirm"
        android:layout_width="120dip"
        android:layout_height="48dip"
        android:background="@drawable/com_pop_list_item_selector"
        android:text="@string/confirm"
        android:textColor="@android:color/white"
        android:textSize="14sp" 
        android:layout_below="@id/common_alert_dialog_content"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>